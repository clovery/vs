{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
